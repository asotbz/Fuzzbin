@using Fuzzbin.Core.Entities
@using System.Net.Http.Json
@using MudBlazor
@inject HttpClient HttpClient
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="@_isValid">
            <MudTextField @bind-Value="_newName"
                          Label="Tag Name"
                          Required="true"
                          RequiredError="Tag name is required"
                          Variant="Variant.Outlined"
                          Immediate="true" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   Disabled="@(!_isValid || _submitting || _newName == _tag?.Name)">
            @if (_submitting)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                <text>Rename</text>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public Tag? Tag { get; set; }

    private MudForm _form = null!;
    private bool _isValid;
    private bool _submitting;
    private Tag? _tag;
    private string _newName = string.Empty;

    protected override void OnParametersSet()
    {
        _tag = Tag;
        _newName = _tag?.Name ?? string.Empty;
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task Submit()
    {
        if (!_isValid || _tag == null) return;

        _submitting = true;
        try
        {
            var request = new { Name = _newName };
            var response = await HttpClient.PutAsJsonAsync($"/api/tags/{_tag.Id}", request);

            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add($"Tag renamed to '{_newName}' successfully", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Conflict)
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                Snackbar.Add(error?.Message ?? "Tag name already exists", Severity.Error);
            }
            else
            {
                Snackbar.Add($"Failed to rename tag: {response.ReasonPhrase}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error renaming tag: {ex.Message}", Severity.Error);
        }
        finally
        {
            _submitting = false;
        }
    }

    private record ErrorResponse(string Message);
}